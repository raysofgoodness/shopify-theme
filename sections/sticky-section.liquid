<script src="{{ 'sticky-section.js' | asset_url }}" defer="defer"></script>

{% if product %}
    <sticky-product class="sticky-product" data-sticky>
        <div class="container sticky-product__container page-width">
            <div class="sticky-product__column column">
                {% if product.images.size > 0 %}
                    <div class="sticky-product__image">
                        <img src="{{ product.images[0].src | img_url }}" alt="{{ product.title }}" />
                    </div>
                {% endif %}
            </div>
            <div class="sticky-product__column column">
                <h3 class="sticky-product__title">{{ product.title }}</h3>
            </div>
            <div class="sticky-product__column column">
                {% if product.price %}
                    <span class="sticky-product__price product-price">{{ product.price | money }}</span>
                {% endif %}
            </div>
            <div class="sticky-product__column column">
                <form action="/cart/add" method="post">
                    <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
                    <button type="submit" class="btn sticky-product__btn">Add to Cart</button>
                </form>
            </div>
        </div>
    </sticky-product>
{% endif %}



{% schema %}
    {
        "name": "Sticky-product",
        "tag": "section",
        "settings": []
    }
{% endschema %}
